# Turso Database (required for auth)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# JWT Secret (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Internal API Key (for backend scripts)
INTERNAL_API_KEY=your-internal-api-key

# Web Push VAPID Keys (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Optional: Alternative data sources (all free tier available)
# FRED API - Federal Reserve Economic Data (free, get key at https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=

# Alpha Vantage - Stock data (free 25 calls/day, get key at https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_KEY=

# Optional: Notifications (set in GitHub Secrets for Actions)
DISCORD_WEBHOOK=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
